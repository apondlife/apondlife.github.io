#!/bin/sh

# -- includes --
. bin/prelude

# -- props --
# if this should clean the build folder
SHOULD_CLEAN=""

# if this is a debug build
IS_DEBUG=""

# -- parsing --
Usage() {
  pc "[-fdh]"

  pl ""
  pl "build the site."

  pl ""
  pt "options"
  pl "-f  if this should clean the build folder"
  pl "-d  if this should run a debug build"
  pl "-h  show this help and exit"

  exit 255
}

while getopts ":flh" option; do
  case "${option}" in
    f*) SHOULD_CLEAN="1" ;;
    d*) IS_DEBUG="1" ;;
    h*) Usage ;;
  esac
done

# -- commands --
Build() {
  # clean the build folder
  if [ -n "$SHOULD_CLEAN" ]; then
    rm -rf "$DST_PATH"
  fi

  # build the prod eleventy command
  FindEleventy "prod"

  # run the build
  $ELEVENTY
}

# -- main --
Main() {
  Build
}

Main "$@"