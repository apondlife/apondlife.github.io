<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta charset="UTF-8">

    <!-- page -->
    <title>pondlife</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="/img/favicon.png">

    <!-- preview -->
    {% assign host = "https://pondlife.games" %}

    <link rel="canonical" href="{{host}}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{host}}{{page.url}}">
    <meta property="og:site_name" content="boshi's place">
    <meta property="og:title" content="pondlife">
    <meta property="og:description" content="{{description}}">
    <meta property="og:image" content="{{host}}/img/{{image}}">
    <meta property="og:image:width" content="488">
    <meta property="og:image:height" content="488">

    <!-- assets -->
    <link rel="stylesheet" href="/site.css">
    <script type="module" src="/site.js"></script>
  </head>

  <body class="Site">
    <main id="page" class="Site-content {{ section | camelize }}">
      {{ content }}
    </main>

    <div id="loading" class="Loading"></div>
  </body>
</html>
